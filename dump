SELECT
    C.ISSUE_ID AS ISSUE_ID
FROM
    RT_ISSUE AS C
    LEFT JOIN BO_ACTIONITEM AS R ON LATEST_RESPONSE.ACTIONITEM_ID = R.ACTIONITEM_ID
    LEFT JOIN BO_ENUMVALS AS E_DELMARK ON E_DELMARK.ENUMVALID = C.DELMARK
    LEFT JOIN BO_ENUMVALS AS E_STATUS ON E_STATUS.ENUMVALID = C.STATUS
    LEFT JOIN ACTORINFO AS U_CHECKED_IN_BY ON U_CHECKED_IN_BY.ACTORID = C.CHECKED_IN_BY
    LEFT JOIN ACTORINFO AS U_CREATOR ON U_CREATOR.ACTORID = C.CREATOR
    LEFT JOIN (
        SELECT
            ISS.ISSUE_ID,
            A2.ACTIONITEM_ID
        FROM
            RT_ISSUE AS ISS
            INNER JOIN BO__ISSUE_ACTIONITEM AS IAL ON ISS.ISSUE_ID = IAL.ISSUE_ID
            INNER JOIN BO_ACTIONITEM AS A2 ON IAL.ACTIONITEM_ID = A2.ACTIONITEM_ID
            INNER JOIN BO_ACTIONITEM AS A3 ON A2.ACTIONITEM_ID = A3.ACTIONITEM_ID
        WHERE
            A2.DELMARK = 'No'
            AND A3.CREATION_DATE IN (
                SELECT 
                    MAX(A4.CREATION_DATE)
                FROM 
                    RT_ISSUE AS ISS2
                    INNER JOIN BO__ISSUE_ACTIONITEM AS IAL2 ON ISS2.ISSUE_ID = IAL2.ISSUE_ID
                    INNER JOIN RT_ACTIONITEM AS A4 ON IAL2.ACTIONITEM_ID = A4.ACTIONITEM_ID
                    INNER JOIN BO_ACTIONITEM AS A5 ON A4.ACTIONITEM_ID = A5.ACTIONITEM_ID
                WHERE
                    A5.DELMARK = 'No'
                    AND ISS2.ISSUE_ID = ISS.ISSUE_ID
            )
    ) AS LATEST_RESPONSE ON C.ISSUE_ID = LATEST_RESPONSE.ISSUE_ID
WHERE
    C.REPORTING_PERIOD_ID = -1;
